{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="p-5">
    <h1>Se connecter</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Entrez votre email:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label class="mt-3" for="password">Entrez votre mot de passe :</label>
        <input class="form-control" type="password" id="password" name="_password" required>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button class="btn btn-sm btn-success mt-3" type="submit">Se connecter</button>
    </form>
    Je n' est pas de compte ? <a href="{{ path('app_register') }}">S' inscrire</a>
</div>
{% endblock %}
