{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="p-5 bg-light">
    <h1>Se connecter</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="text-light">
        <label for="username">Entrez votre email:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label class="mt-3" for="password">Entrez votre mot de passe :</label>
        <input class="form-control" type="password" id="password" name="_password" required>

        {# If you want to control the URL the user is redirected to on success#}
        {# <input type="hidden" name="_target_path" value="account/compte">  #}

        <button class="btn btn-sm btn-success my-3" type="submit">Se connecter</button>
    </form>
    <span>Je n' ai pas de compte ? <a href="{{ path('app_register') }}">Cr√©er un compte</a></span>
</div>
{% endblock %}
