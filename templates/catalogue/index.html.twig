{% endblock %}

{% block body %}

    <!-- AFFICHAGE PLATS POPULAIRE -->



      
        {% if platsPopulaire|length > 0 %}

        <h2 class="text-center mt-5 text-decoration-underline" >Plats Populaires</h2>

        <div class="container-fluid p-4">
          <div class="row align-items-center justify-content-center container-plat">
  
            {% for plat in platsPopulaire %}
            <div class="col-9 col-md-6 col-lg-3" data-key="{{ plat.libelle }}">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                    <div class="col-md-2">
                        <img src="{{ asset('asset/uploads/images/plat/' ~ plat.image) }}" class="img-fluid rounded-start" alt="{{ plat.libelle }}">
                    </div>
                    <div class="col-md-10">
                        <div class="card-body">
                        <div class="d-flex align-items-baseline justify-content-between align-self-end">
                            <p class="card-text"><small class="text-body-secondary">{{ (plat.prix * (1 + plat.tva / 100))|price }}</small></p>
                            <a href="{{ path('app_cart_add', { id : plat.id }  )}}" class="btn small border-warning text-dark">add <i class="bi bi-plus"></i></a>
                            </div>
                        <h5 class="card-title fs-6">{{ plat.libelle }}</h5>
                        <p class="card-text">{{ plat.description|raw }}</p>
                        </div>
                    </div>
                    </div>
                </div>
                </div>

            {% endfor %}
            </div>
        </div>

        {% endif %}
        


                



          <!-- AFFICHAGE CATEGORIE POPULAIRE -->
    
    <section>
        {% if categoriesPopulaire|length > 0 %}
    <h2 class="text-center mt-5 text-decoration-underline">Cat√©gories Populaires</h2>

      <div class="container-fluid p-4 container-plat">
        <div class="row align-items-center justify-content-center">
          

            {% for categorie in categoriesPopulaire %}
            <div class="col-9 col-md-6 col-lg-3 card-categorie">
                <div class="card mb-3" style="max-width: 540px;">
                  <div class="row g-0">
                    <div class="col-md-4">
                      <img src="{{ asset('asset/uploads/images/categorie/' ~ categorie.image) }}" class="img-fluid rounded-start" alt="pizza">
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title fs-6">{{ categorie.libelle}}</h5>
                        <p class="card-text">Lorem ipsum dolor sit amet.</p>
                        <a href="#" class="stretched-link"></a>
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            {% endfor %}
                
      
        </div>
      </div>

    </section>
    {% endif %}



