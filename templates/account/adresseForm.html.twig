{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}


{% block baniere %}
{% endblock %}

{% block body %}
    <div class="container-fluid bg-light p-3">
        <div class="row p-2">
            <div class="col-md-4">
                {% include "account/_menu.html.twig" %}
            </div>
            <div class="col-md-8">
                <h3>Mes adresses</h3>
                {{ form_start(adresseForm)}}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(adresseForm.prenom)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.nom)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.adresse)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.postal)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.ville)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.pays)}}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(adresseForm.phone)}}
                    </div>
                </div>
                {{ form_end(adresseForm)}}
            </div>
        </div>
    </div>
{% endblock %}
